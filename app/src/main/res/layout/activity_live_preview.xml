<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fireTopLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:keepScreenOn="true">

    <com.seven.zion.blinknotifier.CameraSourcePreview
        android:id="@+id/firePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.seven.zion.blinknotifier.GraphicOverlay
            android:id="@+id/fireFaceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
    </com.seven.zion.blinknotifier.CameraSourcePreview>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:text="X blinks to go"
        android:textColor="@color/backgroundBlack"
        android:textSize="13sp" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="30dp"
        android:text="@string/blink_screen_info"
        android:textColor="@color/backgroundBlack"
        android:textSize="13sp" />

    <ImageView
        android:layout_marginStart="20dp"
        android:layout_marginBottom="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:srcCompat="@drawable/round_info_black_18" />
    <Button
        android:id="@+id/counts"
        android:layout_width="121dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/button_deisgn"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="top|right"
        android:layout_margin="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_deisgn"
        android:text="Skip ->"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />
</FrameLayout>
